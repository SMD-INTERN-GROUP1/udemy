<div class="container mw-100">
  <nav class="navbar navbar-dark bg-dark row">
    <!-- Navbar content -->
    <div class="container-fluid col" style="padding-right: 0px !important">
      <a class="navbar-brand" href="/myLearning"
        ><i class="fas fa-chevron-circle-left"></i
      ></a>
    </div>
    <a
      class="navbar-brand text-light fw-bold col"
      href=""
      style="margin-right: 80%"
      >Quiz: Name course</a
    >
  </nav>
  <div
    class="position-fixed map-questions border border-dark border-3"
    style="margin-top: 4%"
  >
    <div class="d-flex flex-wrap border border-none">
      <%questions.forEach(function(data, index) { %>

      <span id="<%= data._id %>"> <%= index + 1 %> </span>
      <%}) %>
    </div>
  </div>
  <form action="/myLearning/check/<%= idCourse %>" class="mt-5" method="post">
    <div class="containers mt-sm-3 my-1">
      <%questions.forEach(function(data, index) { %>
      <div class="question ml-sm-5 pl-sm-5 pt-2">
        <div class="py-2 h5">
          <b><%= index + 1 %>. <%= data.question %> ?</b>
        </div>
        <div class="ml-md-3 ml-sm-3 pl-md-5 pt-sm-0 pt-3" id="options">
          <label class="options"
            ><%= data.answer_1 %>
            <input type="radio" value="1" name="<%= data._id %>" />
            <span class="checkmark"></span>
          </label>
          <label class="options"
            ><%= data.answer_2 %>
            <input type="radio" value="2" name="<%= data._id %>" />
            <span class="checkmark"></span>
          </label>
          <label class="options"
            ><%= data.answer_3 %>
            <input type="radio" value="3" name="<%= data._id %>" />
            <span class="checkmark"></span>
          </label>
          <label class="options"
            ><%= data.answer_4 %>
            <input type="radio" value="4" name="<%= data._id %>" />
            <span class="checkmark"></span>
          </label>
        </div>
      </div>
      <%}) %>
      <div class="answer-btn d-flex flex-row-reverse mt-3">
        <button class="btn btn-dark mb-4" style="margin-left: 71%">
          Submit
        </button>
      </div>
    </div>
  </form>
</div>

