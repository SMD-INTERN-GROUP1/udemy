<link
  rel="stylesheet"
  href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
  integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
  crossorigin="anonymous"
/>
<div class="container mt-5">
  <h1>Create a question</h1>
  <form action="/question/<%= idCourse %>" method="post">
    <div class="form-group row">
      <label for="inputEmail3" class="col-sm-2 col-form-label">Questions</label>
      <div class="col-sm-10">
        <input
          type="text"
          class="form-control"
          id="inputEmail3"
          name="question"
        />
      </div>
    </div>
    <div class="form-group row">
      <label for="inputEmail3" class="col-sm-2 col-form-label">answer 1</label>
      <div class="col-sm-10">
        <input
          type="text"
          class="form-control"
          id="inputEmail3"
          name="answer_1"
        />
      </div>
    </div>
    <div class="form-group row">
      <label for="inputEmail3" class="col-sm-2 col-form-label">answer 2</label>
      <div class="col-sm-10">
        <input
          type="text"
          class="form-control"
          id="inputEmail3"
          name="answer_2"
        />
      </div>
    </div>
    <div class="form-group row">
      <label for="inputEmail3" class="col-sm-2 col-form-label">answer 3</label>
      <div class="col-sm-10">
        <input
          type="text"
          class="form-control"
          id="inputEmail3"
          name="answer_3"
        />
      </div>
    </div>
    <div class="form-group row">
      <label for="inputEmail3" class="col-sm-2 col-form-label">answer 4</label>
      <div class="col-sm-10">
        <input
          type="text"
          class="form-control"
          id="inputEmail3"
          name="answer_4"
        />
      </div>
    </div>
    <fieldset class="form-group">
      <div class="row">
        <legend class="col-form-label col-sm-2 pt-0">Result</legend>
        <div class="col-sm-10">
          <div class="form-check">
            <input
              class="form-check-input"
              type="radio"
              name="result"
              id="gridRadios1"
              value="1"
              checked
            />
            <label class="form-check-label" for="gridRadios1"> 1 </label>
          </div>
          <div class="form-check">
            <input
              class="form-check-input"
              type="radio"
              name="result"
              id="gridRadios2"
              value="2"
            />
            <label class="form-check-label" for="gridRadios2"> 2 </label>
          </div>
          <div class="form-check">
            <input
              class="form-check-input"
              type="radio"
              name="result"
              id="gridRadios2"
              value="3"
            />
            <label class="form-check-label" for="gridRadios2"> 3 </label>
          </div>
          <div class="form-check">
            <input
              class="form-check-input"
              type="radio"
              name="result"
              id="gridRadios2"
              value="4"
            />
            <label class="form-check-label" for="gridRadios2"> 4 </label>
          </div>
        </div>
      </div>
    </fieldset>

    <div class="form-group row" style="justify-content: space-between;">
      <div class="col-sm-10">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
      <a href="/instructor" class="btn btn-warning my-3">Back</a>
    </div>
  </form>
 
</div>
