<div class="container">
  <form
    class="mt-4"
    action="/admin/categories/<%= category.id %>?_method=PUT"
    method="POST"
  >
    <h2>Update categories page</h2>
    <div class="form-group mt-4">
      <label for="exampleInputEmail1" class="fw-bold mb-2">Name:</label>
      <input
        type="text"
        class="form-control"
        id="exampleInputEmail1"
        aria-describedby="emailHelp"
        name="category"
        value="<%= category.category %>"
      />
    </div>
    <div class="form-group mt-3">
      <label for="exampleInputPassword1" class="fw-bold mb-2"
        >Description:</label
      >
      <textarea
        type="text"
        class="form-control"
        id="exampleInputPassword1"
        name="description"
      >
<%= category.description %></textarea
      >
    </div>
    <button type="submit" class="btn btn-primary mt-4">Submit</button>
  </form>
</div>
