<table class="table" id="table_2">
  <div class="d-flex flex-row mt-3">
    <div class="mr-3">
      <a
        href="/admin/addcategories"
        class="btn btn-success rounded-pill"
        style="margin-bottom: 20px"
        >Create category</a
      >
    </div>
    <div class="">
      <a
        href="/admin/trash/categories"
        class="btn btn-success rounded-pill"
        style="margin-bottom: 20px"
        ><i class="fas fa-trash-restore"></i
      ></a>
    </div>
  </div>
  <thead class="table-dark text-center">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Category</th>
      <th scope="col">Description</th>
      <th scope="col" class="text-center">Action</th>
    </tr>
  </thead>
  <tbody class="text-center">
    <% categories.forEach((category,index)=> { %>
    <tr>
      <th scope="row"><%= index+1 %></th>
      <td><%= category.category%></td>
      <td><%= category.description%></td>
      <td style="text-align: center">
        <a
          href="/admin/updatecategories/<%= category.id %>"
          class="btn btn-primary"
          title="update category"
          ><i class="far fa-check-square"></i>
        </a>
        <a
          class="btn btn-danger"
          title="Delete"
          data-bs-toggle="modal"
          data-bs-target="#delete-category-modal"
          data-bs-id="<%= category.id %>"
          ><i class="fas fa-window-close"></i
        ></a>
      </td>
    </tr>
    <% }) %>
  </tbody>
</table>

<!-- Modal delete -->
<div
  class="modal fade"
  id="delete-category-modal"
  tabindex="-1"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Delete category</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">Do you want to delete this category?</div>
      <div class="modal-footer">
        <button id="btn-delete-category" type="button" class="btn btn-danger">
          Delete
        </button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          Cancel
        </button>
      </div>
    </div>
  </div>
</div>

<!-- Delete hidden form -->
<form class="mt-4" name="delete-category-form" method="POST"></form>

<script
  src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
  crossorigin="anonymous"
></script>
<script>
  var categoryId;
  var btnDeleteCategory = document.getElementById("btn-delete-category");
  var deleteForm = document.forms["delete-category-form"];

  var deleteCategoryModal = document.getElementById("delete-category-modal");
  deleteCategoryModal.addEventListener("show.bs.modal", function (event) {
    var button = event.relatedTarget;

    categoryId = button.getAttribute("data-bs-id");
  });

  btnDeleteCategory.onclick = function () {
    // alert(topicId);
    deleteForm.action =
      "/admin/deletecategories/" + categoryId + "?_method=DELETE";
    deleteForm.submit();
  };
</script>
