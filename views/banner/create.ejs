<div class="container">
  <form class="mt-4" action="/admin/banners" method="POST">
    <h2>Banner page</h2>
    <div class="form-group">
      <label for="exampleInputEmail1" class="fw-bold mb-2">Title:</label>
      <textarea
        type="text"
        class="form-control mb-3"
        id="exampleInputEmail1"
        aria-describedby="emailHelp"
        name="title"
      ></textarea>
    </div>

    <div class="form-group">
      <label for="exampleInputEmail1" class="fw-bold mb-2">Content:</label>
      <textarea
        type="text"
        class="form-control mb-3"
        aria-describedby="emailHelp"
        name="content"
      ></textarea>
    </div>
    <div class="form-group">
      <label for="exampleInputEmail1" class="fw-bold mb-2">Image URL:</label>
      <input
        type="text"
        class="form-control"
        aria-describedby="emailHelp"
        name="img"
      />
    </div>
    <div class="d-flex">
      <button type="submit" class="btn btn-primary mt-4">Submit</button>
      <a href="/admin/banners" class="btn btn-secondary mt-4 ms-4">Back</a>
    </div>
  </form>
</div>
