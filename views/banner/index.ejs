<div class="container">
  <!-- Banner section -->
  <h3 class="">Tables of banners</h3>
  <table class="table" id="table_2">
    <div class="">
      <a
        href="/admin/categories"
        class="btn btn-success rounded-pill"
        style="margin-bottom: 20px"
        >Create topic</a
      >
    </div>
    <thead class="table-dark text-center">
      <tr>
        <th scope="col">Title</th>
        <th scope="col">Image</th>
        <th scope="col" class="text-center">Function</th>
      </tr>
    </thead>
    <tbody class="text-center">
      <% banners.forEach(banner=> { %>
      <tr>
        <td><%= banner.title%></td>
        <td>
          <figure class="figure">
            <img
              src="<%= banner.img%>"
              class="vh-90 figure-img img-fluid rounded"
              style="width: 380px; height: 260px"
              alt="..."
            />
          </figure>
        </td>
        <td style="text-align: center">
          <a href="" class="btn btn-warning" title="update category"
            ><i class="far fa-check-circle"></i>
          </a>
          <a href="" class="btn btn-danger" title="Delete"
            ><i class="fas fa-trash-alt"></i
          ></a>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</div>
