<div class="container">
  <!-- Banner section -->
  <h3 class="">Tables of banners</h3>
  <table class="table table-bordered border-dark" id="table_2">
    <div class="">
      <a
        href="/admin/banners/new"
        class="btn btn-success rounded-pill font-weight-bold"
        style="margin-bottom: 20px"
        >Create baner</a
      >
    </div>
    <thead class="table-dark text-center">
      <tr>
        <th scope="col">#</th>
        <th scope="col">Title</th>
        <th scope="col">Image</th>
        <th scope="col" class="text-center">Action</th>
      </tr>
    </thead>
    <tbody class="text-center">
      <% banners.forEach((banner, index)=> { %>
      <tr>
        <th scope="row" class="banner-pding"><%= index+1 %></th>
        <td class="banner-pding title"><%= banner.title%></td>
        <td>
          <figure class="figure">
            <img
              src="<%= banner.img %>"
              class="vh-90 figure-img img-fluid rounded"
              style="width: 380px; height: 260px"
            />
          </figure>
        </td>
        <td style="text-align: center" class="banner-pding">
          <a
            href=""
            class="btn btn-danger"
            title="Delete"
            data-bs-toggle="modal"
            data-bs-target="#delete-banners-modal"
            data-bs-id="<%= banner.id %>"
            ><i class="fas fa-window-close"></i
          ></a>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</div>

<!-- Modal delete -->
<div
  class="modal fade"
  id="delete-banners-modal"
  tabindex="-1"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Delete banners</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">Do you want to delete this banner?</div>
      <div class="modal-footer">
        <button id="btn-delete-banner" type="button" class="btn btn-danger">
          Delete
        </button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          Cancel
        </button>
      </div>
    </div>
  </div>
</div>

<!-- Delete hidden form -->
<form class="mt-4" name="delete-banner-form" method="POST"></form>

<script
  src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
  crossorigin="anonymous"
></script>
<script>
  var categoryId;
  var btnDeleteCategory = document.getElementById("btn-delete-banner");
  var deleteForm = document.forms["delete-banner-form"];

  var deleteCategoryModal = document.getElementById("delete-banners-modal");
  deleteCategoryModal.addEventListener("show.bs.modal", function (event) {
    var button = event.relatedTarget;

    categoryId = button.getAttribute("data-bs-id");
  });

  btnDeleteCategory.onclick = function () {
    // alert(topicId);
    deleteForm.action = "/admin/banners/" + categoryId + "?_method=DELETE";
    deleteForm.submit();
  };
</script>
