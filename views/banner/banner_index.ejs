<div class="container">
  <!-- Banner section -->
  <h3 class="">Tables of banners</h3>
  <table class="table" id="table_2">
    <div class="">
      <a
        href="/admin/addbanner"
        class="btn btn-success rounded-pill font-weight-bold"
        style="margin-bottom: 20px"
        >Create baner</a
      >
    </div>
    <thead class="table-dark text-center">
      <tr>
        <th scope="col">#</th>
        <th scope="col">Title</th>
        <th scope="col">Image</th>
        <th scope="col" class="text-center">Action</th>
      </tr>
    </thead>
    <tbody class="text-center">
      <% banners.forEach((banner, index)=> { %>
      <tr>
        <th scope="row"><%= index+1 %></th>
        <td><%= banner.title%></td>
        <td>
          <figure class="figure">
            <img
              src="<%= banner.img %>"
              class="vh-90 figure-img img-fluid rounded"
              style="width: 380px; height: 260px"
            />
          </figure>
        </td>
        <td style="text-align: center">
          <a href="" class="btn btn-primary" title="update category"
            ><i class="far fa-check-square"></i>
          </a>
          <a href="" class="btn btn-danger" title="Delete"
            ><i class="fas fa-window-close"></i
          ></a>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</div>
