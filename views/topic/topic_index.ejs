<!-- Topic section -->
<h3 class="">Tables of topics</h3>
<table class="table" id="table_2">
  <div class="row mt-3">
    <div class="col-9">
      <a href="/admin/new/topics" class="btn btn-success rounded-pill mb-4"
        >Create</a
      >
    </div>
    <div class="col-3 d-flex flex-row-reverse">
      <a href="/admin/trash/topics" class="btn btn-success rounded-pill mb-4"
        ><i class="fas fa-trash-restore"></i
      ></a>
    </div>
  </div>
  <thead class="table-dark text-center">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Topic</th>
      <th scope="col">Category</th>
      <th scope="col">Description</th>
      <th scope="col" class="text-center">Action</th>
    </tr>
  </thead>
  <tbody class="text-center">
    <% topics.forEach((topic, index)=> { %>
    <tr>
      <th scope="row"><%= index+1 %></th>
      <td><%= topic.name%></td>
      <td><%= topic.category_id.category%></td>
      <td><%= topic.description%></td>
      <td style="text-align: center">
        <!-- <a href="/admin/viewCategory/" class="btn btn-info" title="view details"
          ><i class="fas fa-info-circle"></i
        ></a> -->
        <a
          href="/admin/topics/<%= topic.id %>"
          class="btn btn-primary"
          title="Update"
          ><i class="far fa-check-square"></i>
        </a>
        <a
          href=""
          class="btn btn-danger"
          title="Delete"
          data-bs-toggle="modal"
          data-bs-target="#delete-topic-modal"
          data-bs-id="<%= topic.id %>"
          ><i class="fas fa-window-close"></i
        ></a>
      </td>
    </tr>
    <!-- <tr>
      <td collapse="4">
        You have not created any topics yet.
        <a href="/admin/addtopic" class="btn btn-success" title="Create"
          ><i class="far fa-plus-square"></i>
        </a>
      </td>
    </tr> -->
    <% }) %>
  </tbody>
</table>

<!-- Modal delete -->
<div
  class="modal fade"
  id="delete-topic-modal"
  tabindex="-1"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Delete topic</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">Do you want to delete this topic?</div>
      <div class="modal-footer">
        <button id="btn-delete-topic" type="button" class="btn btn-danger">
          Delete
        </button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          Cancel
        </button>
      </div>
    </div>
  </div>
</div>

<!-- Delete hidden form -->
<form class="mt-4" name="delete-topic-form" method="POST"></form>

<script
  src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
  crossorigin="anonymous"
></script>
<script>
  var topicId;
  var btnDeleteTopic = document.getElementById("btn-delete-topic");
  var deleteForm = document.forms["delete-topic-form"];

  var deleteTopicModal = document.getElementById("delete-topic-modal");
  deleteTopicModal.addEventListener("show.bs.modal", function (event) {
    var button = event.relatedTarget;

    topicId = button.getAttribute("data-bs-id");
  });

  btnDeleteTopic.onclick = function () {
    // alert(topicId);
    deleteForm.action = "/admin/topics/" + topicId + "?_method=DELETE";
    deleteForm.submit();
  };
</script>
