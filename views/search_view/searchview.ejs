<div class="search pt-5" >
    <div class="container">
    <h1><%=result%> results for "<%=title %>"</h1>
    <%if(result>0) { %>
        <form >
            <div class="sort">
                <select name="price" id="sort" onchange='getSelect()'>
                    <option disabled selected>Sort to</option>
                    <option value="sort[price]=desc">Price from high to low</option>
                    <option value="sort[price]=asc">Price from low to high</option>
                  </select>
              </div>
        </form>
        <% } %>
     <div href="" class="search-product" style="min-height: 500px;">
        <%pagination.forEach(function(data) { %>
            <div class="card card-body my-3">
                <div class="media align-items-center text-center text-lg-left flex-column flex-lg-row">
                    <div class="mr-2 mb-3 mb-lg-0"> <img src="<%= data.image %>" width="300" height="180" alt=""> </div>
                    <div class="media-body" style="text-align: left;">
                        <h3 class="media-title font-weight-semibold"><a href="#" data-abc="true" ><%= data.title %></a> </h3>
                        <ul class="list-inline list-inline-dotted mb-3 mb-lg-2">
                            <li class="list-inline-item"><a href="#" class="text-muted" data-abc="true"><%= data.author %></a></li>
                        </ul>
                        <p class="mb-3"><%= data.description %></p></p>
                        <ul class="list-inline list-inline-dotted mb-0">
                            <li class="pb-1">All level</li>
                            <% if(isLogin) {%>
                                <a href="/login" class="btnlike"><i class="fas fa-heart"></i></a>
                                <% } else {%>
                               <!-- da dang nhap -->
                             <form action="/user/wish/<%= data._id %>?_method=PATCH" method="post">  
                                <button class="btnlike  <% var wishLists=user.wishList.includes(data._id); if(wishLists==true) {%> active <%}%> "><i class="fas fa-heart"></i></button>
                             </form>
                                <%}%> 
                        </ul>
                    </div>
                    <div class="mt-3 mt-lg-0 ml-lg-3 text-center">
                        <h3 class="mb-0 font-weight-semibold">$<%= data.price %></h3>
                        <div style="color: yellow !important;"> <i class="fa fa-star"></i> <i class="fa fa-star"></i> <i class="fa fa-star"></i> <i class="fa fa-star"></i> <i class="fa fa-star"></i> </div>
                        <div class="text-muted">1985 reviews</div> 
                        <button type="button" class="btn btn-warning mt-4 text-white"><i class="icon-cart-add mr-2"></i>Add to cart</button>
                      </div>
                </div>
            </div>
         <% }); %>
   </div>
   <nav>
    <ul class="pagination">
      <% for(let i = 0; i < total_pages; i++){%> 
      <li class="page-item"><a class="page-link" href="/course/search/page=<%- i %>?title=<%- title %>"><%- i+1 %></a></li>
      <% } %> 
    </ul>
</nav>
    </div>
 </div>
 
 <script>
    // const buttonsWish = document.getElementsByClassName("toggle-wish");
    // for(let btn of buttonsWish) {
    //     btn.onclick = function() {
    //         const id = this.getAttribute("data-id")
           
    //     }
    // }
    document.getElementById("sort").onchange = function() {
       if( window.location.href.toString().includes("sort")) {
        const newHref = window.location.href.split("&sort")[0]
        let lastParam = window.location.href.split("&sort")[1]
        lastParam = lastParam.split(("desc" || "asc"))[1]
        window.location.href = `${newHref}&${this.value}${lastParam || ""}`
       }
       else
       window.location.href = `${window.location.href}&${this.value}`
    }
 </script>