<!-- Trash category section -->
<div class="container">
  <div class="mt-3">
    <a
      href="/admin/categories"
      class="btn btn-success rounded-pill"
      style="margin-bottom: 20px"
      >List of categories</a
    >
  </div>
  <h3 class="mt-3">Table of Category deleted</h3>
  <table class="table" id="table_trash_topics">
    <thead class="table-secondary text-center">
      <tr>
        <th scope="col">#</th>
        <th scope="col">Category</th>
        <th scope="col">Description</th>
        <th scope="col">Deleted at</th>
        <th scope="col" class="text-center">Action</th>
      </tr>
    </thead>
    <tbody class="text-center">
      <% categoriesDeleted.forEach((categoryDeleted, index)=> { %>
      <tr>
        <th scope="row"><%= index+1 %></th>
        <td><%= categoryDeleted.category%></td>
        <td><%= categoryDeleted.description%></td>
        <td><%= categoryDeleted.deletedAt%></td>
        <td style="text-align: center">
          <a
            href=""
            class="btn btn-primary btn-restore"
            data-id="<%= categoryDeleted.id %>"
            title="restore"
            >Restore</a
          >
          <a
            href=""
            class="btn btn-danger"
            title="Delete"
            data-bs-toggle="modal"
            data-bs-target="#delete-category-modal"
            data-bs-id="<%= categoryDeleted.id %>"
            ><i class="fas fa-window-close"></i
          ></a>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</div>

<!-- Modal delete forever -->
<div
  class="modal fade"
  id="delete-category-modal"
  tabindex="-1"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">
          Delete category forever
        </h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        The action of you cannot restore. Do you want to delete this category?
      </div>
      <div class="modal-footer">
        <button id="btn-delete-category" type="button" class="btn btn-danger">
          Delete
        </button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          Cancel
        </button>
      </div>
    </div>
  </div>
</div>

<form class="mt-4" name="delete-category-form" method="POST"></form>
<form class="mt-4" name="restore-category-form" method="POST"></form>

<script
  src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
  crossorigin="anonymous"
></script>
<script>
  var categoryId;
  var btnDeleteCategory = document.getElementById("btn-delete-category");
  var deleteForm = document.forms["delete-category-form"];
  var restoreForm = document.forms["restore-category-form"];

  var deleteCategoryModal = document.getElementById("delete-category-modal");
  deleteCategoryModal.addEventListener("show.bs.modal", function (event) {
    var button = event.relatedTarget;

    categoryId = button.getAttribute("data-bs-id");
  });

  btnDeleteCategory.onclick = function () {
    // alert(topicId);
    deleteForm.action =
      "/admin/trash/category/" + categoryId + "/force?_method=DELETE";
    deleteForm.submit();
  };

  document.addEventListener("DOMContentLoaded", function () {
    var restoreBtn = $(".btn-restore");
    // Restore btn click
    restoreBtn.click(function (e) {
      e.preventDefault();

      var categoryId = $(this).data("id");
      // console.log($(this).data("id"));
      restoreForm.action =
        "/admin/trash/category/" + categoryId + "/restore?_method=PATCH";
      restoreForm.submit();
    });
  });
</script>
