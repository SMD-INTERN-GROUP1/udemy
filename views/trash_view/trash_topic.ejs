<!-- User section -->
<div class="container">
  <div class="mt-3">
    <a
      href="/admin/topics"
      class="btn btn-success rounded-pill"
      style="margin-bottom: 20px"
      >List of Topics</a
    >
  </div>
  <h3 class="mt-3">Table of Topic deleted</h3>
  <table class="table" id="table_trash_topics">
    <thead class="table-secondary text-center">
      <tr>
        <th scope="col">#</th>
        <th scope="col">Topic</th>
        <th scope="col">Category</th>
        <th scope="col">Deleted at</th>
        <th scope="col" class="text-center">Action</th>
      </tr>
    </thead>
    <tbody class="text-center">
      <% topicsdeleted.forEach((topicdeleted, index)=> { %>
      <tr>
        <th scope="row"><%= index+1 %></th>
        <td><%= topicdeleted.name%></td>
        <td><%= topicdeleted.category_id.category%></td>
        <td><%= topicdeleted.deletedAt%></td>
        <td style="text-align: center">
          <a
            href=""
            class="btn btn-primary btn-restore"
            data-id="<%= topicdeleted.id %>"
            title="restore"
            >Restore</a
          >
          <a
            href=""
            class="btn btn-danger"
            title="Delete forever"
            data-bs-toggle="modal"
            data-bs-target="#delete-topic-modal"
            data-bs-id="<%= topicdeleted.id %>"
            ><i class="fas fa-window-close"></i
          ></a>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</div>

<!-- Modal delete forever -->
<div
  class="modal fade"
  id="delete-topic-modal"
  tabindex="-1"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Delete topic forever</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        The action of you cannot restore. Do you want to delete this topic?
      </div>
      <div class="modal-footer">
        <button id="btn-delete-topic" type="button" class="btn btn-danger">
          Delete
        </button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          Cancel
        </button>
      </div>
    </div>
  </div>
</div>

<form class="mt-4" name="delete-topic-form" method="POST"></form>
<form class="mt-4" name="restore-topic-form" method="POST"></form>

<script
  src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
  crossorigin="anonymous"
></script>
<script>
  var topicId;
  var btnDeleteTopic = document.getElementById("btn-delete-topic");
  var deleteForm = document.forms["delete-topic-form"];
  var restoreForm = document.forms["restore-topic-form"];

  var deleteTopicModal = document.getElementById("delete-topic-modal");
  deleteTopicModal.addEventListener("show.bs.modal", function (event) {
    var button = event.relatedTarget;

    topicId = button.getAttribute("data-bs-id");
  });

  btnDeleteTopic.onclick = function () {
    // alert(topicId);
    deleteForm.action =
      "/admin/trash/topic/" + topicId + "/force?_method=DELETE";
    deleteForm.submit();
  };

  document.addEventListener("DOMContentLoaded", function () {
    var restoreBtn = $(".btn-restore");
    // Restore btn click
    restoreBtn.click(function (e) {
      e.preventDefault();

      var topicId = $(this).data("id");
      // console.log($(this).data("id"));
      restoreForm.action =
        "/admin/trash/topic/" + topicId + "/restore?_method=PATCH";
      restoreForm.submit();
    });
  });
</script>
