<div class="container">
  <h3>Welcome: <%= user.username %></h3>
  <div class="d-flex flex-row-reverse bd-highlight ml-5">
    <a
      href="/instructor/addcourse"
      class="btn btn-dark rounded-pill fw-bold"
      style="margin-bottom: 20px"
      >New Course</a
    >
  </div>

  <div class="row">
    <% getCourses.forEach(course=> { %>
    <div class="col-sm-6 col-lg-4 mt-3 mh-100">
      <div class="card">
        <img src="<%= course.image%>" class="card-img-top" alt="..." />
        <div class="card-body">
          <h5 class="card-title fs-5 fw-bold"><%= course.title%></h5>
          <p class="card-text fs-5"><%= course.author%></p>
          <p class="card-text fs-6">Price: $<%= course.price%></p>
          <a
            href="/instructor/courses/<%= course.slug%>"
            class="btn btn-dark w-100 fw-bold"
            >View Details</a
          >
          <div class="row">
            <div class="col-6">
              <a
                href=""
                type="submit"
                data-bs-toggle="modal"
                data-bs-target="#delete-course-modal"
                data-bs-id="<%= course.slug%>"
                class="btn btn-danger fw-bold w-100 mt-4"
              >
                Delete
              </a>
            </div>
            <div class="col-6">
              <a
                href="/instructor/courses/<%= course.slug %>/update"
                type="submit"
                class="btn btn-dark fw-bold w-100 mt-4"
              >
                Update
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% }) %>
  </div>
</div>

<!-- Modal delete -->
<div
  class="modal fade"
  id="delete-course-modal"
  tabindex="-1"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Delete courses</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">Do you want to delete this course?</div>
      <div class="modal-footer">
        <button id="btn-delete-course" type="button" class="btn btn-danger">
          Delete
        </button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          Cancel
        </button>
      </div>
    </div>
  </div>
</div>

<!-- Delete hidden form -->
<form class="mt-4" name="delete-course-form" method="POST"></form>

<script
  src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
  crossorigin="anonymous"
></script>
<script>
  var courseSlug;
  var btnDeleteTopic = document.getElementById("btn-delete-course");
  var deleteForm = document.forms["delete-course-form"];
  var deleteTopicModal = document.getElementById("delete-course-modal");
  deleteTopicModal.addEventListener("show.bs.modal", function (event) {
    var button = event.relatedTarget;
    courseSlug = button.getAttribute("data-bs-id");
  });
  btnDeleteTopic.onclick = function () {
    // alert(topicId);
    deleteForm.action =
      "/instructor/courses/" + courseSlug + "/delete?_method=DELETE";
    deleteForm.submit();
  };
</script>
