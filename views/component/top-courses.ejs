
<div class="image-slider">
  <% for(var i = 0; i<courses.length; i++) { %>
    <a class="image-item course-link" href="/course/<%-courses[i].title%>">
      <div class="image">
        <img
          src=<%=courses[i].image%>
          alt=""
        />
      </div>
      <div class="image-title"><%=courses[i].title%></div>
      <div class="author"><%=courses[i].author%></div>
      <div class="description"><%=courses[i].description%></div>
      <div class="price">$<%=courses[i].price%></div>
    </a>
  <% } %>
