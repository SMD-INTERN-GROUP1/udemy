<head>
  <% include _head %>
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link
    href="https://fonts.googleapis.com/css2?family=Poppins&display=swap"
    rel="stylesheet"
  />
</head>
<body>
  <header><%- include('header')%></header>

  <!-- Teaching register form -->
  <div class="container mt-5">
    <form>
      <div class="form-group mt-3">
        <label class="mb-2 fw-bold" for="exampleInputEmail1">User ID:</label>
        <input
          type="text"
          class="form-control"
          id="exampleInputEmail1"
          aria-describedby="emailHelp"
          readonly
          value="<%= userId %>"
        />
      </div>

      <div class="form-group mt-3">
        <label class="mb-2 fw-bold" for="exampleInputEmail1">Username:</label>
        <input
          type="text"
          class="form-control"
          id="exampleInputEmail1"
          aria-describedby="emailHelp"
          readonly
          value="<%= user %>"
        />
      </div>

      <div class="form-group mt-3">
        <label class="mb-2 fw-bold" for="exampleInputEmail1">Specialty:</label>
        <input
          type="text"
          class="form-control"
          id="exampleInputEmail1"
          aria-describedby="emailHelp"
        />
      </div>

      <div class="form-group mt-3">
        <label class="mb-2 fw-bold" for="exampleInputPassword1"
          >Description:</label
        >
        <input type="text" class="form-control" id="exampleInputPassword1" />
      </div>

      <div class="form-group mt-3">
        <label class="mb-2 fw-bold" for="exampleInputPassword1"
          >Experience:</label
        >
        <select class="form-control" name="category_id">
          <option value="1">Basic</option>
          <option value="2">Middle</option>
          <option value="3">Master</option>
        </select>
      </div>

      <button type="submit" class="btn btn-dark mt-5 mb-5 fw-bolder rounded">
        Submit
      </button>
    </form>
  </div>
  <!-- Teaching register form -->

  <footer><%- include('footer')%></footer>
</body>
